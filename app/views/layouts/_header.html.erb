<header>
  
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <title>CourseCatalogs</title>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Course Catalog</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="/">Home</a></li>
        <li><%= link_to "Instructors", 'instructors' %></li>
        <li><%= link_to "Subjects", 'subjects' %></li>
        <li><%= link_to "Courses", 'courses' %></li>
        <li><%= link_to "Users", 'users' %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <form class="navbar-form navbar-left">

<!--           <div class="input-group">
            <%= form_tag(courses_path, method: :get, :authenticity_token => false, id: "search-form") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Search Courses" %>
              <%= submit_tag "Search"%>
            <% end %>
          </div> -->

          <div class="input-group">
            <form action="/courses" accept-charset="UTF-8" method="get">
              <input name="utf8" type="hidden" value="&#x2713;" />
              <input type="text" class="form-control" placeholder="Search" name="search" id="search" />
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit" />
                  <i class="glyphicon glyphicon-search"></i>
                </button>
              </div>
            </form>
          </div>

        </form>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to login_path do %><span class="glyphicon glyphicon-user"></span> Log In <% end %> </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
