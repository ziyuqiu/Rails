
<% provide(:title, @user.name) %>
<div class="row">
  <button type="button" class="btn btn-default"><%= link_to 'Back', users_path %></button>
  </br>
</div>

</br></br>
<div class="row">
  
  <div class="col-md-4">
    <section class="user_info">
      <div class = "col-md-4">
        <img class="img-circle" alt="Cinque Terre" size="150" <%= gravatar_for @user %>
      </div>
      <div class = "col-md-8">
        <h4>
          <strong><%= @user.name %></strong>
          <p><%= @user.email %></p>
          <p><%= link_to 'Edit', edit_user_path(@user) %> |
          <%= link_to 'Delete', @user, method: :delete, data: { confirm: "You sure?" } %></p>
        </h4>
      </div>
    </section>
  </div>
  <div class="col-md-8">
    <strong><h3>Enrolled Courses <span class="badge"><%= @user.registrations.count %></span></h3></strong>
    <ul>
    <% @user.registrations.each do |r| %>
      <li><%= Course.find(r.course_id).code  %> | 
          <%= Course.find(r.course_id).name  %>
          <%= link_to 'Unenroll', r, method: :delete, data: { confirm: "You sure to unenroll from this class?" }, class:"btn btn-link" %>
          </li>
    <% end %>
    </ul>
  </div>
</div>


<p id="notice"><%= notice %></p>
  






